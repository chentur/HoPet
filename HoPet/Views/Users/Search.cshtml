@model IEnumerable<HoPet.Models.User>
@{
    ViewBag.Title = "Search";
}
<h2>Search Users</h2>
<div class="search-form">
    @using (Html.BeginForm("Search", "Users", FormMethod.Get))
    {
        <div class="container">
            <div class="row align-items-center">
                <div class="col-4 justify-content-between">
                    <div>
                        <span>Name: </span>
                        @Html.TextBox("username", null, new { @class = "form-control" })
                    </div>
                    <div>
                        <span>Email: </span>
                        @Html.TextBox("email", null, new { @class = "form-control" })
                    </div>
                    <div class="margin-top-small">
                        @Html.CheckBox("isAdmin", false, new { @class = "", @type = "checkbox" })
                        <span>Admin</span>
                    </div>
                </div>
                <div class="col-2">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
<ul class="list-inline">
    @foreach (var item in Model)
    {
        <li class="list-inline-item">
            <div class="card border-primary mb-3" style="max-width: 20rem;">
                <div class="card-header card-field">
                    <h4>
                        @Html.DisplayFor(modelItem => item.Username)
                    </h4>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <span class="card-field">@Html.DisplayNameFor(model => model.Email) :</span>
                        <span>@Html.DisplayFor(modelItem => item.Email)</span>
                    </p>
                    <p class="card-text">
                        <span class="card-field">@Html.DisplayNameFor(model => model.ContactInfo) :</span>
                        <span>@Html.DisplayFor(modelItem => item.ContactInfo)</span>
                    </p>
                    <p class="card-text">
                        <span class="card-field">@Html.DisplayNameFor(model => model.IsAdmin) :</span>
                        @{
                            if (item.IsAdmin)
                            {
                                <span class="text-success">true</span>
                            }
                            else
                            {
                                <span class="text-danger">false</span>
                            }
                        }
                    </p>
                </div>
                <div class="card-footer container">
                    <div class="row justify-content-around">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary col-5" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary col-5" })
                    </div>
                </div>
            </div>
        </li>
    }
</ul>

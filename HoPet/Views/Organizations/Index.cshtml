@model IEnumerable<HoPet.Models.Organization>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row justify-content-between">
        <div class="col-sm">
            <h2 class="page-title">Organizations List</h2>
        </div>
        <div class="col-sm col-sm-auto">
            <p>
                @if (ViewBag.IsUserAdmin)
                {
                    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-success" })
                }
            </p>
        </div>
    </div>
</div>
<span class="fa fa-plus"></span>
<ul class="list-inline">
    @foreach (var item in Model)
    {
        <li class="list-inline-item full-card">
            <div class="card border-primary mb-3" style="max-width: 20rem;">
                <div class="card-header card-field">
                    <h4>
                        @Html.DisplayFor(model => item.Name)
                    </h4>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <span class="card-field">@Html.DisplayNameFor(model => model.Area) : </span>
                        <span>@Html.DisplayFor(model => item.Area)</span>
                    </p>
                    <p class="card-text">
                        <span class="card-field">@Html.DisplayNameFor(model => model.Description) : </span>
                        <span>@Html.DisplayFor(model => item.Description)</span>
                    </p>
                    <p class="card-text">
                        <span class="card-field">@Html.DisplayNameFor(model => model.PhoneNumber) : </span>
                        <span>@Html.DisplayFor(model => item.PhoneNumber)</span>
                    </p>
                </div>
                <div class="card-footer container">
                    <div class="row justify-content-around">
                        @if (ViewBag.IsUserAdmin)
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary col-3" })
                        }
                        
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary col-4" })
                        
                        @if (ViewBag.IsUserAdmin)
                        {
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary col-4" })
                        }
                    </div>
                </div>
            </div>
        </li>
    }
</ul>
